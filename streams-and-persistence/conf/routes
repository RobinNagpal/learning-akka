# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET             /washing-machines                     com.akka.streamsAndPersistence.api.WashingMachineStreamController.getWashingMachines
GET             /washing-machines/:id/state           com.akka.streamsAndPersistence.api.WashingMachineStreamController.getWashingMachineState(id: String)
GET             /washing-machines/:id/power           com.akka.streamsAndPersistence.api.WashingMachineStreamController.getWashingMachineConsumption(id: String)
POST            /washing-machines/:id/start           com.akka.streamsAndPersistence.api.WashingMachineStreamController.startWashingMachine(id: String)
POST            /washing-machines/:id/power           com.akka.streamsAndPersistence.api.WashingMachineStreamController.capturePowerConsumption(id: String)
POST            /washing-machines/:id/batch-power     com.akka.streamsAndPersistence.api.WashingMachineStreamController.capturePowerConsumptionInBatches(id: String)
